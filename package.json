{
  "name": "ssslogger",
  "version": "3.0.0",
  "description": "A super simple structured JSON logger for Node.js and other platforms",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
