    "typescript": "^5.0.0",
    "ultracite": "5.0.48",
    "vitest": "^3.2.4",
    "vite": "^6.0.5",
    "axios": "^1.6.7"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/richardhristov/ssslogger.git"
  },
